<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#3F51B5"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="论坛"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#F8F8FF">

        <TextView
            android:id="@+id/etSearch"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/search"
            android:hint="搜索"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="14sp" />

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="1.0px"
        android:layout_marginRight="1.0px"
        android:background="#ffc0c3c4" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/my_bookfriend"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:paddingLeft="20dp"
                android:gravity="center_horizontal|center_vertical|left"
                android:text="我的书友"
                android:background="@drawable/layout_login_selector"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="1.0px"
                android:layout_marginRight="1.0px"
                android:background="#ffc0c3c4" />

            <TextView
                android:id="@+id/read_thoughts"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:paddingLeft="20dp"
                android:gravity="center_horizontal|center_vertical|left"
                android:text="读书感想"
                android:background="@drawable/layout_login_selector"
                android:textColor="@android:color/black"
                android:textSize="17sp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="1.0px"
                android:layout_marginRight="1.0px"
                android:layout_below="@+id/offlint_meet"
                android:background="#ffc0c3c4" />
            <TextView
                android:id="@+id/offlint_meet"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:paddingLeft="20dp"
                android:gravity="center_horizontal|center_vertical|left"
                android:text="组织线下交流会"
                android:background="@drawable/layout_login_selector"
                android:textColor="@android:color/black"
                android:textSize="17sp" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:layout_below="@+id/offlint_meet"
            android:background="#ffc0c3c4" />

    </LinearLayout>

</LinearLayout>
