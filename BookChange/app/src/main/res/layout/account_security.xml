<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#3F51B5">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:text="返回"
            android:textColor="@drawable/button_head_back"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="账号安全"
            android:layout_marginLeft="70dip"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">


        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />

        <TextView
            android:id="@+id/change_password"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:background="@drawable/layout_login_selector"
            android:gravity="center_horizontal|center_vertical|left"
            android:paddingLeft="20dp"
            android:text="修改密码"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />

        <TextView
            android:id="@+id/password_question"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:background="@drawable/layout_login_selector"
            android:gravity="center_horizontal|center_vertical|left"
            android:paddingLeft="20dp"
            android:text="密保问题"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />

        <TextView
            android:id="@+id/change_phonenumber"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:background="@drawable/layout_login_selector"
            android:gravity="center_horizontal|center_vertical|left"
            android:paddingLeft="20dp"
            android:text="更换手机"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />

    </LinearLayout>

</LinearLayout>