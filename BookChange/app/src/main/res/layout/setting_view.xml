<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#3F51B5">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:text="返回"
            android:textColor="@drawable/button_head_back"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="设置"
            android:layout_marginLeft="75dip"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>
    </LinearLayout>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:orientation="vertical">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="20dp" />

         <View
             android:layout_width="fill_parent"
             android:layout_height="1.0px"
             android:layout_marginLeft="1.0px"
             android:layout_marginRight="1.0px"
             android:background="#ffc0c3c4" />

         <Switch
             android:id="@+id/share_location"
             android:layout_width="fill_parent"
             android:layout_height="46dp"
             android:background="@android:color/white"
             android:paddingRight="40dp"
             android:paddingLeft="20dip"
             android:text="共享地理位置"
             android:textSize="17sp" />
         <View
             android:layout_width="fill_parent"
             android:layout_height="1.0px"
             android:layout_marginLeft="1.0px"
             android:layout_marginRight="1.0px"
             android:background="#ffc0c3c4" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="10dp" />

         <View
             android:layout_width="fill_parent"
             android:layout_height="1.0px"
             android:layout_marginLeft="1.0px"
             android:layout_marginRight="1.0px"
             android:background="#ffc0c3c4" />
         <Switch
             android:id="@+id/nearby_visible"
             android:layout_width="fill_parent"
             android:layout_height="46dp"
             android:background="@android:color/white"
             android:paddingRight="40dp"
             android:paddingLeft="20dip"
             android:text="对附近的人可见"
             android:textSize="17sp" />
         <View
             android:layout_width="fill_parent"
             android:layout_height="1.0px"
             android:layout_marginLeft="1.0px"
             android:layout_marginRight="1.0px"
             android:background="#ffc0c3c4" />


         <TextView
             android:layout_width="match_parent"
             android:layout_height="20dp" />
         <View
             android:layout_width="fill_parent"
             android:layout_height="1.0px"
             android:layout_marginLeft="1.0px"
             android:layout_marginRight="1.0px"
             android:background="#ffc0c3c4" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@android:color/white">
             <TextView
                 android:id="@+id/account_security"
                 android:layout_width="fill_parent"
                 android:layout_height="46dp"
                 android:background="@drawable/layout_login_selector"
                 android:gravity="center_horizontal|center_vertical|left"
                 android:paddingLeft="20dp"
                 android:text="账号安全"
                 android:textColor="@android:color/black"
                 android:textSize="17sp" />
         </LinearLayout>

         <View
             android:layout_width="fill_parent"
             android:layout_height="1.0px"
             android:layout_marginLeft="1.0px"
             android:layout_marginRight="1.0px"
             android:background="#ffc0c3c4" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="30dp" />

         <View
             android:layout_width="fill_parent"
             android:layout_height="1.0px"
             android:layout_marginLeft="1.0px"
             android:layout_marginRight="1.0px"
             android:background="#ffc0c3c4" />
         <LinearLayout
             android:id="@+id/wipe_cache"
             android:layout_width="fill_parent"
             android:layout_height="46dp"
             android:clickable="true"
             android:background="@drawable/layout_login_selector"
             android:orientation="horizontal">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:paddingLeft="20.0dp"
                 android:text="清空缓存"
                 android:gravity="center_vertical"
                 android:focusable="false"
                 android:layout_weight="1"
                 android:textColor="@android:color/black"
                 android:textSize="17sp" />

             <TextView
                 android:id="@+id/activity_wipe_cache"
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:gravity="center_vertical|right"
                 android:layout_gravity="right"
                 android:focusable="false"
                 android:paddingRight="20dip"
                 android:text="12.5KB"
                 android:layout_weight="1"
                 android:textColor="#9A9A9A"
                 android:textSize="15sp" />
         </LinearLayout>
         <View
             android:layout_width="fill_parent"
             android:layout_height="1.0px"
             android:layout_marginLeft="1.0px"
             android:layout_marginRight="1.0px"
             android:background="#ffc0c3c4" />

     </LinearLayout>

</LinearLayout>
